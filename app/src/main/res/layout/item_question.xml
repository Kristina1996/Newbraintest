<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:weightSum="100">

    <TextView
        android:id="@+id/tvQuestionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/btnAnswer1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="90"
        android:layout_marginTop="26dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/tvQuestionText"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnAnswer2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="90"
        android:layout_marginTop="12dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/btnAnswer1"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnAnswer3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="90"
        android:layout_marginTop="12dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/btnAnswer2"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnAnswer4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="90"
        android:layout_marginTop="12dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/btnAnswer3"
        android:layout_centerHorizontal="true" />

</RelativeLayout>